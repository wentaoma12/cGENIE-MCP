go_16=2.939598
# scl_tau (should be same as GOLDSTEIN's value)
ea_11=1.931692
# atm. diff. amp. for T
ea_12=4667550.0
# atm. diff. amp. for q
ea_13=1097107.0
# dist'n width
ea_14=1.083292
# dist'n slope
ea_15=6.3252553E-02
